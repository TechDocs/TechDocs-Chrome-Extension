{
  "name": "TechDocs-Chrome-Extension",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "font-awesome": "^4.7.0",
    "riot": "^3.0.1"
  },
  "devDependencies": {
    "bestzip": "^1.1.3",
    "chokidar-cli": "^1.2.0",
    "mocha": "^3.2.0",
    "postcss": "^5.2.6",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^8.2.0",
    "reify": "^0.4.4",
    "rollup": "^0.36.4",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-riot": "^1.1.0",
    "standard": "^8.6.0"
  },
  "scripts": {
    "test": "npm run standard && npm run mocha",
    "build": "sh build.sh",
    "pack": "bestzip techdocs.zip dist/*",
    "watch": "chokidar src/*.js src/lib/* src/components/* -c 'npm run build'",
    "standard": "standard src/*.js src/lib/*js",
    "mocha": "mocha test/spec/*.js --require reify"
  },
  "standard": {
    "globals": [
      "chrome",
      "localStorage",
      "XMLHttpRequest",
      "opts"
    ]
  }
}
