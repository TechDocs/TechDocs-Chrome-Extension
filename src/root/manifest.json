{
  "manifest_version": 2,
  "name": "TechDocs",
  "description": "The technical document curation service for you",
  "version": "1.0.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://techdocs.github.io/TechDocs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "btn-gray.png"
  },
  "web_accessible_resources": [
    "popup.*",
    "background.*",
    "lang-*.png"
  ]
}
